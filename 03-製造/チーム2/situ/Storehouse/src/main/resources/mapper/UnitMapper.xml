<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.northsea.dao.UnitDao">
    <!--
          id = "接口中的方法名"
          parameterType = "接口中传入方法的参数类型"
          resultType = "返回实体类对象：包.类名"  处理结果集 自动封装
              查询：select标签
              增加：insert标签
              修改：update标签
              删除：delete标签
      -->


    <!-- int saveWithAutoGeneratedId(@Param(value = "unit") Unit unit)-->
    <insert id="saveWithAutoGeneratedId" parameterType="com.northsea.entity.Unit">
        INSERT INTO m_unit (name)
        VALUES ((SELECT max_id FROM (SELECT MAX(unit_id)+1 max_id FROM m_unit) AS tmp), #{name})
    </insert>

</mapper>